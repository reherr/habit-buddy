<div class="container my-4">
  <div class="row justify-content-center">
    <main class="col-lg-8">
      <article class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title mb-4">New Habit</h1>

          <%= render "form", habit: @habit %>

          <nav class="mt-4" aria-label="Back to Habits">
            <%= link_to habits_path, class: 'btn btn-outline-secondary' do %>
              <i class="fas fa-arrow-left" aria-hidden="true"></i> 
              <span class="sr-only">Back to</span> Habits
            <% end %>
          </nav>
        </div>
      </article>
    </main>
  </div>
</div>

