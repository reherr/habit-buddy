<div class="container my-4">
  <h1 class="mb-4 text-center">Your Habits</h1>

  <% if @habits.empty? %>
    <div class="alert alert-info text-center" role="alert">
      Start your life-changing journey now! Create a new habit.
    </div>
  <% else %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="habits">
      <% @habits.each do |habit| %>
        <div class="col">
          <div class="card h-100 shadow-sm" role="region" aria-labelledby="habit-<%= habit.id %>-title">
            <div class="card-body">
              <h5 id="habit-<%= habit.id %>-title" class="card-title"><%= habit.name %></h5>
              <p class="card-text"><%= truncate(habit.description, length: 100) %></p>
              <%= link_to habit, class: 'btn btn-outline-primary', aria: { label: "Show details for #{habit.name}" } do %>
                <i class="fas fa-eye" aria-hidden="true"></i> Show this habit
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to new_habit_path, class: 'btn btn-success', aria: { label: 'Create a new habit' }  do %>
      <i class="fas fa-plus" aria-hidden="true"></i> New Habit
    <% end %>
  </div>
</div>
