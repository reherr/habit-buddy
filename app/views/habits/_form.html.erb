<%= form_with(model: habit, local: true, class: 'needs-validation') do |form| %>
  <% if habit.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(habit.errors.count, "error") %> prohibited this habit from being saved:</h4>
      <ul>
        <% habit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :start_date, class: 'form-label' %>
    <%= form.date_field :start_date, value: Date.today, class: 'form-control' %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="d-grid">
    <%= form.submit 'Save Habit', class: 'btn btn-primary' %>
  </div>
<% end %>
