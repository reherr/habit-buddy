<%= form_with(model: habit_entry, local: true) do |form| %>
            <% if habit_entry.errors.any? %>
              <div class="alert alert-danger">
                <h4 class="alert-heading"><%= pluralize(habit_entry.errors.count, "error") %> prohibited this habit entry from being saved:</h4>
                <ul>
                  <% habit_entry.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= form.hidden_field :user_id, value: current_user.id %>
            <%= form.hidden_field :habit_id, value: habit_entry.habit_id %>

            <div class="form-group">
              <%= form.label :entry_date %>
              <%= form.date_field :entry_date, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :status %>
              <div class="form-check">
                <%= form.check_box :status, class: 'form-check-input' %>
                <%= form.label :status, class: 'form-check-label' %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :note %>
              <%= form.text_area :note, rows: 3, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.submit 'Create Habit Entry', class: 'btn btn-primary' %>
            </div>
          <% end %>
