<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <section class="card shadow-sm" aria-labelledby="habit-title">
        <div class="card-body">
          <h1 id="habit-title" class="card-title mb-4"><%= @habit.name %></h1>

          <%= render "form", habit_entry: @habit_entry %>

          <nav class="mt-4" aria-label="Habit navigation">
            <%= link_to habit_path(@habit), class: 'btn btn-outline-secondary', aria: { label: "Return to " + @habit.name } do %>
              <i class="fas fa-arrow-left" aria-hidden="true"></i> Back to Habit
            <% end %>
          </nav>
        </div>
      </section>
    </div>
  </div>
</div>

