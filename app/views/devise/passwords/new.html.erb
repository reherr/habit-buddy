<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h2 id="forgot-password-heading" class="card-title">Forgot your password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true, "aria-labelledby" => "forgot-password-heading" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-3">
              <%= f.label :email, 'Email Address', class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, aria: { describedby: "email-help" } %>
              <small id="email-help" class="form-text text-muted">Enter the email address associated with your account to receive reset instructions.</small>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary", aria: { label: "Send password reset instructions" } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

